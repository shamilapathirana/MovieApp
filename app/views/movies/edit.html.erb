<%= form_for(@movie) do |m| %>

<%= m.label(:title_of_movie) %>
<%= m.text_field(:title, {:class => 'form-control'})%><br>

<%= m.label(:released_year)%>
<%= m.text_field(:release_year, {:class => 'form-control'}) %><br>

<%= m.label(:plot)%>
<%= m.text_area(:plot, {:class => 'form-control'}) %><br>

<%= m.label(:image)%>
<%= m.file_field :image %><br>

<%= m.submit({:class => 'btn btn-primary'}) %>

<% end %>